<% form_for nil, :as => :bucket, :url => { :controller => "bucket", :action => "create" }, 
	 :html => {:id => "new_bucket_form", :style => "display:none"}  do |f| %>
	<div><label>Name</label><%= f.text_field :name %></div>
	<div><label>Balance</label><%= f.text_field :balance %></div>
	<%= f.hidden_field :account_id, :value => @account.id %>
	<input type="hidden" name="redirect_controller" value="<%= params[:controller] %>" />
	<div><label>&nbsp;</label><%= submit_tag 'Save', :class => "submit" %></div>  
	<br class="clear" />
<% end %>